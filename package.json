{
  "name": "pike-local-markets",
  "version": "0.1.0",
  "private": true,
  "description": "Pike Local Lending Markets",
  "homepage": "https://nuts.finance",
  "repository": "https://github.com/nutsfinance/pike-local-markets.git",
  "license": "MIT",
  "author": {
    "name": "NUTS Finance",
    "email": "security@nuts.finance",
    "url": "https://nuts.finance"
  },
  "main": "index.js",
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "deploy:testnet": "npx cannon build script/cannon/testnet.toml --rpc-url https://sepolia.base.org",
    "deploy:testnet:dryrun": "npx cannon build script/cannon/testnet.toml --rpc-url https://sepolia.base.org --dry-run",
    "postinstall": "forge install",
    "lint:check": "yarn lint:sol-logic && forge fmt --check",
    "lint:fix": "yarn sort-package-json && forge fmt && yarn solhint 'src/**/*.sol' 'test/**/*.sol' --fix",
    "lint:sol-logic": "solhint -c .solhint.json 'src/**/*.sol'",
    "lint:sol-tests": "solhint -c .solhint.json 'test/**/*.sol'",
    "prepare": "husky",
    "sort-package-json": "sort-package-json",
    "test": "npx cannon test script/cannon/local.test.toml -- -vv",
    "test:coverage": "npx cannon test script/cannon/local.test.toml --forge-cmd coverage -- -vv --no-match-coverage \"(script|test|node_modules)\"",
    "test:fork": "npx cannon test script/cannon/fork.test.toml --rpc-url https://base-mainnet.public.blastapi.io -- -vv",
    "test:fork:coverage": "npx cannon test script/cannon/fork.test.toml --rpc-url https://base-mainnet.public.blastapi.io --forge-cmd coverage -- -vv --no-match-coverage \"(script|test|node_modules)\""
  },
  "dependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@pythnetwork/pyth-sdk-solidity": "^4.0.0",
    "cannon-std": "git+https://github.com/usecannon/cannon-std.git#master",
    "forge-std": "git+https://github.com/foundry-rs/forge-std.git"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "husky": ">=8",
    "solhint": "5.0.3",
    "solhint-plugin-prettier": "0.1.0",
    "sort-package-json": "2.10.0"
  }
}
